---
import { cn } from "../lib/utils";
import { Image } from "astro:assets";
import Heading3 from "./reuse/Heading3.astro";
import Text from "./reuse/Text.astro";

const { icon, feature, benefit, image, orientation } = Astro.props
const orientation_class = orientation % 2 != 0 ? 'lg:order-2 lg:justify-self-end' : ''
---

<div class="grid gap-5 items-center lg:grid-cols-2">
    <div class={cn("flex flex-col gap-3 lg:gap-5 lg:max-w-[85%]", orientation_class)}>
        <div class="flex gap-5 items-center">
            <i class={icon}/>
            <Heading3 class="text-[#0A2540]">{feature}</Heading3>
        </div>
        <Text class="text-pretty text-[#425466]">{benefit}</Text>
    </div>
    <Image class="w-full aspect-video object-cover rounded-xl" src={image} alt=""/>
</div>